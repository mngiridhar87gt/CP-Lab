#include <stdio.h>

int main ()
{
    int arr [] = {5,10,15,20,25};
    int*prt=arr;
    printf("ptr =%p,*ptr=%d\n", ptr,*ptr);
    ptr++;
    (adds size of(int))
    printf("after ptr++:ptr=%p,*ptr=%d\n",ptr,*ptr);
    ptr+2=2;// more 2 steps
    printf("after ptr+=2:ptr=%p,*ptr=%d\n", ptr, *ptr);
    return 0;
    }