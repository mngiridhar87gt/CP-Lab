#include<stdio.h>
#include<string.h>
int main()
{
    char username[30]="Siddhant Divekar";
    char password[15];
    printf("Username: Siddhant Divekar\n");
    printf("Create your Password: ");
    scanf("%s",&password);
    int c=strlen(password);
    if(c==8)
    {
        printf("Password is Weak\n");
    }
    else if(c>8 && c<11)
    {
        printf("Password is Moderate\n");
    }
    else if(c>12 && c<=15)
    {
        printf("Password is Strong\n");
    }
    else if(c>15
            )
        {
            printf("Password exceeds character limit\n");
        }

    if(strcmp(password,"SiddhantDive@07")==0)
    {
        printf("Password is valid");
    }
    else
        printf("Password is invalid");

    return 0;
}
